<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_bar_main_height"
    android:background="@color/navigation_bar_main_bg"
    android:baselineAligned="false"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/custom_pressed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/navigation_button_main_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/navigation_button_main_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text=""
                android:textColor="@color/navigation_bar_main_tv"
                android:textSize="@dimen/tv_size_12" />

            <ImageView
                android:id="@+id/navigation_button_main_imageView1"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/navigation_button_main_textView1"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_button_main_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/navigation_button_main_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text=""
                android:textColor="@color/navigation_bar_main_tv"
                android:textSize="@dimen/tv_size_12" />

            <ImageView
                android:id="@+id/navigation_button_main_imageView2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/navigation_button_main_textView2"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_button_main_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/navigation_button_main_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text=""
                android:textColor="@color/navigation_bar_main_tv"
                android:textSize="@dimen/tv_size_12" />

            <ImageView
                android:id="@+id/navigation_button_main_imageView3"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/navigation_button_main_textView3"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>