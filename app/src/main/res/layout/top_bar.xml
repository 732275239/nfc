<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar_relative"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#F45422" >

    
    <ImageView
        android:id="@+id/top_bar_leftImg"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="35dp"
        android:src="@drawable/back_icon_selected" />

    <TextView
        android:id="@+id/top_bar_titleTv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="标题"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="@color/text_color_snow_white"
        android:textSize="@dimen/tv_size_17" />

    <ImageView
        android:id="@+id/top_bar_rightImg"
        android:layout_width="@dimen/navigation_bar_main_height"
        android:layout_height="@dimen/navigation_bar_main_height"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:padding="9dp"/>

    <TextView
        android:id="@+id/top_bar_rightTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navigation_bar_main_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_color_snow_white"
        android:textSize="@dimen/tv_size_16"
        android:text=""
        android:visibility="gone"/>

</RelativeLayout>