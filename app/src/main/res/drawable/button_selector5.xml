<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

            <solid android:color="@color/all_bgcolor" />
            <stroke
                android:width="1dp"
                android:color="@color/app_theme"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

            <solid android:color="@color/custom_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/app_theme"/>
        </shape>
    </item>

</selector>